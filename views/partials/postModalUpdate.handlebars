<div class="fixed inset-0 flex items-center justify-center hidden bg-gray-800 bg-opacity-75" id="updatePostModal">
    <div class="bg-white p-8 max-w-md w-full rounded-lg shadow-lg">
        <form class="updatePostForm" post_id="{{ post.id }}">
            <div class="mb-6">
                <label for="updatePostTitle" class="block text-sm font-semibold text-gray-700 mb-2">Post Title</label>
                <input
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-gray-700"
                    type="text" id="updatePostTitle" />
            </div>
            <div class="mb-6">
                <label for="updatePostBody" class="block text-sm font-semibold text-gray-700 mb-2">Post</label>
                <input
                    class="w-full h-36 px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-gray-700 text-center"
                    type="text" id="updatePostBody"
                    placeholder="Enter your description.&#10; No more than 100 characters" />
            </div>
            <div>
                <button class="w-full bg-rose-700 text-white px-4 py-2 rounded-md hover:bg-gray-700" type="submit" post_id="{{ post.id }}">
                    Update Post
                </button>
            </div>
        </form>
    </div>
</div>
