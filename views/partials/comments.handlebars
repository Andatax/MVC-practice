
<div class=" postBtn container mx-auto mt-8 p-4 bg-white shadow-lg text-start" post_id="{{post.id}}">

    <h1 class="text-3xl font-bold mb-4">{{post.title}}</h1>


    <p>{{post.body}}</p>
    <p class="text-gray-600 text-sm">
        <span class="font-semibold">Posted by {{post.user.dataValues.name}}</span>
    </p>
</div>

</br>

{{#each comments as |comment| }}
<div class="container mx-auto mt-8 p-4 bg-white shadow-lg">
    <p>{{comment.body}}</p>
    <p class="text-gray-600">
        <span class="font-semibold">Commented by {{comment.user.name}}</span>
    </p>

</div>

{{/each}}