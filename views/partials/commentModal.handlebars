<div class="fixed inset-0 flex items-center justify-center hidden bg-gray-800 bg-opacity-75" id="newCommentModal">
    <div class="bg-white p-8 max-w-md w-full rounded-lg shadow-lg">
        <form class="newCommentForm" post_id="{{post.id}}">
            <div class="mb-6">
                <label for="newCommentBody" class="block text-sm font-semibold text-gray-700 mb-2">Add your
                    comment</label>
                <input
                    class="w-full h-36 px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-gray-700 text-center"
                    type="text" id="newCommentBody" placeholder="Write your comment.&#10; No more than 100 characters"
                    post_id="{{post.id}}" />
            </div>
            <div>
                <button class="w-full bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700" type="submit"
                    post_id="{{post.id}}">
                    Add comment
                </button>
            </div>
        </form>
    </div>
</div>
<script src="/js/newComment.js"></script>