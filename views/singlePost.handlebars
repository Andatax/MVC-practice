

{{> header}}
<article class=" flex justify-between w-full container mx-auto mt-6 p-4 bg-white shadow-lg" post_id="{{post.id}}">
    <div class="w-5/6">
        <h1 class="text-4xl font-bold mb-4"><a href="/post/{{post.id}}">{{post.title}}</a></h1>
        <p>{{post.body}}</p>
        <p class="text-gray-600 text-xs">
            Published by
            <span class="font-semibold">{{post.user.dataValues.name}}</span>
        </p>
    </div>
    <div class="flex items-center">
        <a href="" class="hover:underline btn-new-post px-5 text-gray-700 hover:text-gray-500"><svg
                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round"
                    d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
            </svg>
        
        </a>
        <a href="" class="hover:underline btn-new-post px-5 text-gray-700 hover:text-gray-500"><svg
                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round"
                    d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 0 1 .865-.501 48.172 48.172 0 0 0 3.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" />
            </svg>
        
        
        </a>
        <a href="/api/posts/postDelete/{{post.id}}"
            class="w-full h-6 text-xs cursor-pointer  text-gray-700  px-4 py-1 rounded-sm hover:text-gray-500"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round"
                    d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
            </svg></a></a>
    </div>
</article>


{{> comments}}

<a href=""
    class="fixed   bottom-5 left-1/2 bg-rose-800 text-gray-50 py-2 px-2 rounded-full shadow-md hover:bg-rose-900 hover:shadow-lg transition duration-300 ease-in-out" id="btn-new-comment">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
        class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
    </svg>

</a>
