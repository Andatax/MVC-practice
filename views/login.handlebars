<div class="bg-gray-50 flex items-center justify-center h-screen transition-opacity duration-500 ease-in-out">
    <div class="bg-white rounded-sm shadow-lg flex items-center text-gray-900 justify-between h-4/6 w-full max-w-5xl">
        <div class="w-1/2 p-5 text-center">
            <h2 class="text-5xl text-gray-900 text-center font-bold mb-6">Sign in</h2>
            <form class="loginForm">
                <div class="mb-6">
                    <input type="email" id="email" name="email" placeholder="Email"
                        class="w-full px-4 py-3 border border-primary-color rounded-md focus:outline-none focus:ring-slate-500" />
                </div>
                <div class="mb-6">
                    <input type="password" id="password" name="password" placeholder="Password"
                        class="w-full px-4 py-3 border border-primary-color rounded-md focus:outline-none focus:ring-slate-500" />
                </div>
                <button type="submit"
                    class="w-full max-w-sm text-gray-900 px-6 py-3 bg-accent-color text-primary-color rounded-md hover:bg-opacity-80 focus:outline-none focus:ring-slate-50 border">
                    Sign In
                </button>
            </form>
        </div>

        <div class="w-1/2 h-full flex text-center text-gray-50 ml-6">
            <div
                class="flex-col w-full h-full rounded-l-lg rounded-r-sm px-8 py-20 justify-center items-center bg-rose-800">
                <h2 class="text-4xl font-bold text-accent-color mb-6">Do not have an account ?</h2>
                <p class="text-lg mb-6">Register with your personal details to create a post</p>
                <button class="w-2/3 py-3 border rounded-md hover:bg-opacity-80 focus:outline-none focus:ring-slate-50"
                    id="signUpBtn">
                    <a href="./signup " class="text-zinc-50">Sign Up</a>
                </button>
            </div>
        </div>
    </div>
</div>

<script src="/js/login.js"></script>

