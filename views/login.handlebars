<div class="bg-white p-8 rounded shadow-md w-96">
    <h1 class="text-2xl font-semibold mb-6">Login</h1>

    <form  class="loginForm">
        <div class="mb-4">
            <label for="email" class="block text-gray-600 text-sm font-medium mb-2">Email</label>
            <input type="email" id="email" name="email"
                class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-rose-500" required />
        </div>

        <div class="mb-4">
            <label for="password" class="block text-gray-600 text-sm font-medium mb-2">Password</label>
            <input type="password" id="password" name="password"
                class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-rose-500" required />
        </div>

        <button type="submit"
            class="w-full bg-rose-900 text-white p-2 rounded-md hover:bg-rose-700 focus:outline-none focus:ring focus:border-rose-300">
            Login
        </button>
    </form>

    <div class="mt-4 text-center">
        <p class="text-gray-600">Don't have an account? Click below to sign up</p>
        
        <button class="w-2/3 py-3 border rounded-md hover:bg-opacity-80 focus:outline-none focus:ring-slate-50"
            id="SignUpBtn">
            <a href="./signup " class="text-rose-500 hover:underline">Sign Up</a>
        </button>
    </div>
</div>

<script src="/js/login.js"></script>

